{
  "name": "blog-automation-v2",
  "productName": "블로그 자동화",
  "version": "1.0.3",
  "description": "유튜브 영상을 분석하여 블로그 글을 자동으로 생성하고 발행하는 애플리케이션",
  "homepage": "https://github.com/PARKJAEHYEONG922/blog-automation-v2",
  "repository": {
    "type": "git",
    "url": "https://github.com/PARKJAEHYEONG922/blog-automation-v2.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production && electron-builder",
    "build:publish": "webpack --mode production && electron-builder --publish=always",
    "build:draft": "webpack --mode production && electron-builder --publish=never",
    "start": "cross-env NODE_ENV=development electron dist/main.js",
    "start:prod": "cross-env NODE_ENV=production electron dist/main.js",
    "dist": "electron-builder",
    "dist:publish": "electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "author": {
    "name": "PARKJAEHYEONG922",
    "email": "wogud922@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^6.11.0",
    "electron": "38.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "html-webpack-plugin": "^5.6.4",
    "node-loader": "^2.1.0",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.4",
    "typescript": "~4.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anaisbetts/mcp-youtube": "^0.6.0",
    "@distube/ytdl-core": "^4.16.12",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "chromium-bidi": "^9.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.1",
    "yt-dlp-wrap": "^2.3.12"
  },
  "build": {
    "appId": "com.parkjaehyeong922.blog-automation-v2",
    "productName": "블로그 자동화",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!*.md",
      "!src",
      "!webpack*",
      "!tsconfig.json"
    ],
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "블로그 자동화",
      "allowElevation": true,
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "forceCodeSigning": false,
    "npmRebuild": false,
    "publish": [
      {
        "provider": "github",
        "owner": "PARKJAEHYEONG922",
        "repo": "blog-automation-v2",
        "releaseType": "release"
      }
    ]
  }
}
